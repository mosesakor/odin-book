<div class="d-flex justify-content-center">
  <h2>Odinbook</h2>
</div>
<div class="d-flex justify-content-center flex-lg-row flex-md-row flex-column mt-5">
   <div class="pb-5 col-lg-5 col-md-5">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="pt-2 shadow pb-4 mt-5 container col-lg-7 col-md-12 mb-5">
        <div class="field my-3">
          <%= f.email_field :email, autofocus: true, class: "bg-light" %>
        </div>

        <div class="field my-3">
          <%= f.password_field :password, class: "bg-light" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-4">
            <%= f.check_box :remember_me %>
          </div>
        <% end %>

        <div class="btn btn-primary d-flex justify-content-center mt-3">
          <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        </div>

        <div class="btn btn-primary d-flex justify-content-center mt-3">
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-primary' %>
        </div>

        <div class="field d-flex justify-content-center mt-3">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
        
      </div>
    <% end %>
  </div>
</div>